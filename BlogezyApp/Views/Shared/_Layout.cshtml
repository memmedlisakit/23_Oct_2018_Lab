    <script src="~/js/jquery.app.js"></script>
    <script>
        $.ajax({
            url: "https://reqres.in/api/users?page=4",
            method: "GET",
            success: function (res) { 
                setDate(res);
            },
            error: function (err) {
                console.log(err)
            }
        })

        function setDate(res) {
            const postTiles = document.querySelectorAll(".post-title");
            const images = document.querySelectorAll(".post-preview img");
            for (let i = 0; i < res.data.length;i++) {
                postTiles[i].innerHTML = `<a href="#">${res.data[i].first_name}</a>`
                images[i].src = res.data[i].avatar;
            }
        }
    </script>
