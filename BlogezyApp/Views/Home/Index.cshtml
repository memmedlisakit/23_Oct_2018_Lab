@using BlogezyApp.Models;
@model List<Post>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-8">
    @foreach (Post post in Model)
    {
        <!-- Post-->
        <article class="post">
            <div class="post-header">
                <h2 class="post-title"><a href="#">@post.Title</a></h2>
                <ul class="post-meta">
                    <li><i class="mdi mdi-calendar"></i>@post.AddedDate.ToString("dd/MM/yyyy")</li>
                    <li><i class="mdi mdi-tag-text-outline"></i> <a href="#">@post.Tag</a></li>
                    <li><i class="mdi mdi-comment-multiple-outline"></i> <a href="#">@post.Comments.ToList().Count Comments</a></li>
                </ul>
            </div>
            <div class="post-preview">
                <a href="#"><img src="~/images/blog/@post.Image" alt="" class="img-fluid rounded"></a>
            </div>
            <div class="post-content">
                <p>@post.ShortDescription...</p>
            </div>

            <div>
                <a href="@Url.Action("Index","DetailsPost", new { id = post.Id })" class="btn btn-outline-custom">Read More <i class="mdi mdi-arrow-right"></i></a>
            </div>
        </article>
        <!-- Post end-->
    }
    <!-- Pagination-->
    <div class="row">
        <div class="col-lg-12">
            <ul class="pagination">
                <li class="next"><a href="#"><i class="mdi mdi-chevron-left"></i></a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li class="prev"><a href="#"><i class="mdi mdi-chevron-right"></i></a></li>
            </ul>
        </div>
    </div>
    <!-- Pagination end-->
</div>


@await Component.InvokeAsync("SideMenu")
